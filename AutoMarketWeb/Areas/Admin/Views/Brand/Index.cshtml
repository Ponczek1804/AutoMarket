@model IEnumerable<Brand>
@{
    ViewData["Title"] = "List of brands";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Brand List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;&nbsp;Add brand
            </a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>
                    Brand Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td style="width: 50%;">
                        @obj.Name
                    </td>
                    <td style="width: 30%;">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>&nbsp;Edit
                            </a>
                            <a asp-controller="Brand" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>&nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>