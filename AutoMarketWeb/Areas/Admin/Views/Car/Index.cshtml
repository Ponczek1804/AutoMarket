@{
    ViewData["Title"] = "List of cars";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Car list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Car" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;&nbsp;Add new car
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Car Name</th>
                <th>Mileage</th>
                <th>Year of production</th>
                <th>Fuel Type</th>
                <th>Car Brand</th>
                <th>Price</th>
                <th>Discount price</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/car.js"></script>
}