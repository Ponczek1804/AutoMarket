@model IEnumerable<Company>
@{
    ViewData["Title"] = "List of companies";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Company list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;&nbsp;Add new company
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>


        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width: 15%;">
                        @obj.Name
                    </td>
                    <td style="width: 15%;">
                        @obj.StreetAddress
                    </td>
                    <td style="width: 15%;">
                        @obj.City
                    </td>
                    <td style="width: 15%;">
                        @obj.State
                    </td>
                    <td style="width: 15%;">
                        @obj.PhoneNumber
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>&nbsp;Edit
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>&nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>

