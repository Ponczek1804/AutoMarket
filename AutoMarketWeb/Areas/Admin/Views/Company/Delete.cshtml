@model Company
@{
    ViewData["Title"] = "Delete company";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-light">Delete company</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>

        <div class="mb-4">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" disabled/>
        </div>

        <div class="mb-4 col-6">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" class="form-control" disabled/>
        </div>

        <div class="mb-4 col-6">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" disabled/>
        </div>

        <div class="mb-4 col-6">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control" disabled />
        </div>

        <div class="mb-4 col-6">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary text-dark" style="width:150px;">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        //Wstawia wbudowaną walidacje client side
    }
    }